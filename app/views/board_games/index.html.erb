<h2>List of all board games</h2>

<h4>Import new games from CSV</h4>
<%= form_tag import_board_games_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import CSV" %>
<% end %>

<table>
  <tr>
    <td>Name</td>
    <td>Category</td>
  </tr>
  <% @board_games.each do |game| %>
    <tr>
      <td><%= link_to game.name, board_game_path(game) %></td>
      <td><%= game.category.name %></td>
    </tr>
  <% end %>
</table>

</br>
  <%= link_to 'Home', root_path %>
